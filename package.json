{
  "version": "0.0.50",
  "name": "crypto-wallets-validator",
  "description": "A simple utility to validate cryptocurrency wallet addresses for EVM, Solana, and Bitcoin chains.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "lint": "tsc",
    "setup": "npm i && npm run build",
    "test": "npm run setup && npm run lint && jest",
    "publish": "npm test && npm publish --access public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/melnicenkovadik/crypto-wallets-validator.git"
  },
  "keywords": [
    "wallet",
    "address",
    "validator",
    "cryptocurrency",
    "EVM",
    "Solana",
    "Bitcoin",
    "Cosmos"
  ],
  "author": "melnicenkovadik",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "7.26.0",
    "@babel/preset-env": "7.25.4",
    "@babel/preset-typescript": "7.24.7",
    "@types/jest": "29.5.12",
    "babel-jest": "29.7.0",
    "jest": "29.7.0",
    "ts-jest": "29.2.5",
    "tsup": "8.3.5",
    "typescript": "5.6.3"
  }
}
